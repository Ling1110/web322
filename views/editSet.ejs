<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link rel="stylesheet" href="/css/main.css" />

</head>

<main class="container mx-auto my-8">
    <h1 class="text-3xl font-semibold mb-4">Edit Set: <%= set.name %></h1>

<body tabindex="-1">
    <%- include('partials/navbar', {page: '' }) %>

<form action="/lego/editSet" method="POST" class="max-w-md mx-auto">
    <div class="mb-4">
      <label for="name" class="block text-sm font-medium text-gray-600">Name</label>
      <input type="text" id="name" name="name" value="<%= set.name %>" class="mt-1 p-2 w-full border rounded-md">
    </div>

    <div class="mb-4">
      <label for="year" class="block text-sm font-medium text-gray-600">Year</label>
      <input type="text" id="year" name="year" value="<%= set.year %>" class="mt-1 p-2 w-full border rounded-md">
    </div>

    <div class="mb-4">
      <label for="theme_id" class="block text-sm font-medium text-gray-600">Theme</label>
      <select id="theme_id" name="theme_id" class="mt-1 p-2 w-full border rounded-md">
        <% themes.forEach(theme => { %>
          <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
            <%= theme.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="mb-4">
      <label for="set_num" class="block text-sm font-medium text-gray-600">Set Number</label>
      <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" class="mt-1 p-2 w-full border rounded-md" readonly>
    </div>

    <div class="mb-4">
        <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">Delete Set</a>
    </div>

    <div class="mb-4">
      <button type="submit" class="bg-blue-500 text-white p-2 rounded-md cursor-pointer">
        Update Set
      </button>
    </div>
  </form>
</main>
</body>
</html>
